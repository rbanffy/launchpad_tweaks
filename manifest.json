{
    "manifest_version": 2,

    "name": "Launchpad Tweaks",
    "description": "Tweaks the appearance of the Launchpad website to make it easier to use",
    "version": "1.0",

    "icons": { "128": "icons/launchpad_tweaks_128.png" },

    "permissions": [ "https://*.launchpad.net/*", "http://*.launchpad.net/*" ],

    "content_scripts": [ {
        "css": [ "css/launchpad_tweaks.css" ],
        "matches": [ "https://*.launchpad.net/*", "http://*.launchpad.net/*" ],
        "run_at": "document_end"
    }
                       ],
    "update_url": "https://clients2.google.com/service/update2/crx"
}
